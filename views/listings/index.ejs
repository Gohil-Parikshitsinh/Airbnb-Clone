<% layout("/layouts/boilerplate.ejs") %>
<body>
    <h3>All Listing</h3>
    <!-- <form action="/listings/new" method="get">
        <button>Create New</button>
    </form> -->
    
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListing){ %>
        <a href="/listings/<%=listing._id%>" class="listing-links">

            <div class="card col">
                <img src="<%=listing.image%>" class="card-img-top" alt="listing_images" style="height: 20rem;">
                <div class="card-img-overlay">ABCD</div>
                <div class="card-body">
                    <p class="card-text">
                        <%= listing.title %> <br>
                        <%= listing.price.toLocaleString("en-IN") %>/night <br>
                    </p>
                </div>
            </div>
            <!-- <li><a href="/listings/<%= listing._id %>"><%= listing.title %></a></li> -->
        </a>
    <% } %>
</div>
</body>
</html>